getgenv().Config = {
    ["Item Gift"] = {"Mango"} -- danh sÃ¡ch váº­t pháº©m cÃ³ thá»ƒ gift
}

-- ðŸ§© HÃ m kiá»ƒm tra cÃ³ pet cáº§n gift hay khÃ´ng
function havepet()
    local plr = game:GetService("Players").LocalPlayer

    -- Kiá»ƒm tra trong Backpack
    for _, v in pairs(plr.Backpack:GetChildren()) do
        if v:GetAttribute("CanGift") and table.find(getgenv().Config["Item Gift"], v:GetAttribute("ItemName")) then
            return true
        end
    end

    -- Kiá»ƒm tra trong Character (náº¿u Ä‘ang equip)
    for _, v in pairs(plr.Character:GetChildren()) do
        if v:GetAttribute("CanGift") and table.find(getgenv().Config["Item Gift"], v:GetAttribute("ItemName")) then
            return true
        end
    end

    return false
end

-- ðŸš€ Thá»±c thi kiá»ƒm tra
if not havepet() then
    writefile(game.Players.LocalPlayer.Name .. ".txt", "Completed-Change Clone")
    game.Players.LocalPlayer:Kick("Done") -- Kick náº¿u khÃ´ng cÃ²n pet cáº§n gift
else
    print("Still have giftable pets âœ…")
end
