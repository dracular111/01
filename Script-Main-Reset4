getgenv().Config = {
    ["Item Gift"] = {"Mango"} -- danh s√°ch v·∫≠t ph·∫©m c√≥ th·ªÉ gift
}

-- üß© H√†m ki·ªÉm tra c√≥ pet c·∫ßn gift hay kh√¥ng
function havepet()
    local plr = game:GetService("Players").LocalPlayer

    -- Ki·ªÉm tra trong Backpack
    for _, v in pairs(plr.Backpack:GetChildren()) do
        if v:GetAttribute("CanGift") and table.find(getgenv().Config["Item Gift"], v:GetAttribute("ItemName")) then
            return true
        end
    end

    -- Ki·ªÉm tra trong Character (n·∫øu ƒëang equip)
    for _, v in pairs(plr.Character:GetChildren()) do
        if v:GetAttribute("CanGift") and table.find(getgenv().Config["Item Gift"], v:GetAttribute("ItemName")) then
            return true
        end
    end

    return false
end

-- ‚è≥ L·∫∑p ki·ªÉm tra m·ªói 30 gi√¢y
while wait(30) do
    if not havepet() then
        writefile(game.Players.LocalPlayer.Name .. ".txt", "Completed-Change Clone")
        game.Players.LocalPlayer:Kick("Done") -- Kick n·∫øu kh√¥ng c√≤n pet c·∫ßn gift
        break -- d·ª´ng v√≤ng l·∫∑p sau khi kick
    else
        print("‚úÖ V·∫´n c√≤n pet c√≥ th·ªÉ gift, ki·ªÉm tra l·∫°i sau 30s...")
    end
end
