-- üîÑ GitHub Auto-Reload Loader v3.3
-- ‚úÖ UI nhi·ªÅu m√†u + random delay + load svhop script t·ª´ GitHub (thay v√¨ TeleportService)

local CoreGui = game:GetService("CoreGui")
local Player = game.Players.LocalPlayer
local reloadDelay = 20
local minHopDelay, maxHopDelay = 5, 10 -- 1‚Äì10 ph√∫t random delay

local scripts = {
    { name = "Event.lua",    url = "https://raw.githubusercontent.com/dracular111/01/main/Event" },
    { name = "FPS.lua",      url = "https://raw.githubusercontent.com/dracular111/01/main/FPS" },
    { name = "Track.lua", url = "https://raw.githubusercontent.com/dracular111/01/main/Track" },
    { name = "Gift-Gem.lua", url = "https://raw.githubusercontent.com/dracular111/01/main/Gift-Gem" },
}

-- üß± UI b·∫£ng ch√≠nh
local screenGui = CoreGui:FindFirstChild("GitHubLoaderUI") or Instance.new("ScreenGui")
screenGui.Name = "GitHubLoaderUI"
screenGui.IgnoreGuiInset = true
screenGui.ResetOnSpawn = false
screenGui.Parent = CoreGui

local frame = screenGui:FindFirstChild("MainFrame")
if not frame then
    frame = Instance.new("Frame")
    frame.Name = "MainFrame"
    frame.Size = UDim2.new(0, 330, 0, 150)
    frame.Position = UDim2.new(1, -340, 1, -200)
    frame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
    frame.BackgroundTransparency = 0.2
    frame.BorderSizePixel = 0
    frame.Parent = screenGui

    local title = Instance.new("TextLabel")
    title.Name = "Title"
    title.Size = UDim2.new(1, 0, 0, 30)
    title.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
    title.Text = "üîÅ GitHub Auto-Reload Loader"
    title.TextColor3 = Color3.fromRGB(255, 255, 255)
    title.Font = Enum.Font.Code
    title.TextScaled = true
    title.Parent = frame
end

local list = frame:FindFirstChild("UIListLayout") or Instance.new("UIListLayout")
list.Padding = UDim.new(0, 3)
list.FillDirection = Enum.FillDirection.Vertical
list.Parent = frame

-- ‚öôÔ∏è UI d√≤ng log
local function getOrCreateLabel(scriptName)
    local label = frame:FindFirstChild(scriptName)
    if not label then
        label = Instance.new("TextLabel")
        label.Name = scriptName
        label.Size = UDim2.new(1, -10, 0, 25)
        label.Position = UDim2.new(0, 5, 0, 0)
        label.BackgroundTransparency = 0.3
        label.Font = Enum.Font.Code
        label.TextScaled = true
        label.TextColor3 = Color3.fromRGB(255, 255, 255)
        label.TextXAlignment = Enum.TextXAlignment.Left
        label.Parent = frame
    end
    return label
end

local function updateLabel(label, text, color)
    label.Text = text
    label.BackgroundColor3 = color
end

-- ‚öôÔ∏è t·∫£i v√† ch·∫°y code
local function fetchAndRun(scriptInfo)
    local ok, code = pcall(function()
        return game:HttpGet(scriptInfo.url)
    end)
    if not ok or not code then return nil, "Fetch error" end
    local func, err = loadstring(code)
    if not func then return nil, "Compile error" end
    local success, execErr = pcall(func)
    if not success then return nil, "Runtime error" end
    return code, "Loaded successfully"
end

-- üöÄ l·∫ßn ƒë·∫ßu
local lastCodes = {}
for _, s in ipairs(scripts) do
    local code, msg = fetchAndRun(s)
    lastCodes[s.name] = code
    local label = getOrCreateLabel(s.name)
    if msg == "Loaded successfully" then
        updateLabel(label, "‚úÖ " .. s.name .. " = " .. msg .. " (" .. os.date("%H:%M:%S") .. ")", Color3.fromRGB(40,120,40))
    else
        updateLabel(label, "‚ùå " .. s.name .. " = " .. msg .. " (" .. os.date("%H:%M:%S") .. ")", Color3.fromRGB(120,40,40))
    end
end

-- üîÅ T·ª± reload
task.spawn(function()
    while task.wait(reloadDelay) do
        for _, s in ipairs(scripts) do
            local ok, newCode = pcall(function()
                return game:HttpGet(s.url)
            end)
            if ok and newCode and newCode ~= lastCodes[s.name] then
                lastCodes[s.name] = newCode
                local _, msg = fetchAndRun(s)
                local label = getOrCreateLabel(s.name)

                if msg == "Loaded successfully" then
                    updateLabel(label, "üü° " .. s.name .. " = Updated (" .. os.date("%H:%M:%S") .. ")", Color3.fromRGB(100,100,40))
                    task.wait(0.5)
                    updateLabel(label, "‚úÖ " .. s.name .. " = Loaded successfully (" .. os.date("%H:%M:%S") .. ")", Color3.fromRGB(40,120,40))
                else
                    updateLabel(label, "‚ùå " .. s.name .. " = " .. msg .. " (" .. os.date("%H:%M:%S") .. ")", Color3.fromRGB(120,40,40))
                end

                -- ‚ö° N·∫øu l√† Event.lua ‚Üí random delay + load svhop script
                if s.name == "Event.lua" then
                    local delayTime = math.random(minHopDelay, maxHopDelay)
                    print(("[Loader] ‚ö° Event.lua changed, will execute Event-hop after %ds..."):format(delayTime))
                    updateLabel(label, "‚è≥ Event.lua = Run Event-hop after " .. math.floor(delayTime / 60) .. "m (" .. os.date("%H:%M:%S") .. ")", Color3.fromRGB(80,80,20))

                    task.delay(delayTime, function()
                        updateLabel(label, "üöÄ Loading Event-hop script (" .. os.date("%H:%M:%S") .. ")", Color3.fromRGB(100,60,20))
                        local success, err = pcall(function()
                            loadstring(game:HttpGet("https://raw.githubusercontent.com/dracular111/01/main/Event-hop"))()
                        end)
                        if success then
                            updateLabel(label, "‚úÖ Event-hop loaded (" .. os.date("%H:%M:%S") .. ")", Color3.fromRGB(40,120,40))
                            print("[Loader] ‚úÖ Event-hop loaded successfully.")
                        else
                            updateLabel(label, "‚ùå Event-hop load failed (" .. tostring(err) .. ")", Color3.fromRGB(120,40,40))
                            warn("[Loader] ‚ö†Ô∏è Event-hop load failed:", err)
                        end
                    end)
                end
            end
        end
    end
end)
