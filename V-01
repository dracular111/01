-- üîÑ GitHub Auto-Reload Loader v3.4
-- ‚úÖ Fix Event not running + Stable + UI m√†u + Random delay svhop

local CoreGui = game:GetService("CoreGui")
local reloadDelay = 30
local minHopDelay, maxHopDelay = 60, 600 -- 1‚Äì10 ph√∫t random

local scripts = {
    { name = "Event.lua",    url = "https://raw.githubusercontent.com/dracular111/01/main/Event" },
    { name = "FPS.lua",      url = "https://raw.githubusercontent.com/dracular111/01/main/FPS" },
    { name = "Gift-Gem.lua", url = "https://raw.githubusercontent.com/dracular111/01/main/Track" },
}

-- üß± UI setup
local screenGui = CoreGui:FindFirstChild("GitHubLoaderUI") or Instance.new("ScreenGui")
screenGui.Name = "GitHubLoaderUI"
screenGui.IgnoreGuiInset = true
screenGui.ResetOnSpawn = false
screenGui.Parent = CoreGui

local frame = screenGui:FindFirstChild("MainFrame")
if not frame then
    frame = Instance.new("Frame")
    frame.Name = "MainFrame"
    frame.Size = UDim2.new(0, 330, 0, 150)
    frame.Position = UDim2.new(1, -340, 1, -200)
    frame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
    frame.BackgroundTransparency = 0.2
    frame.BorderSizePixel = 0
    frame.Parent = screenGui

    local title = Instance.new("TextLabel")
    title.Name = "Title"
    title.Size = UDim2.new(1, 0, 0, 30)
    title.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
    title.Text = "üîÅ GitHub Auto-Reload Loader"
    title.TextColor3 = Color3.fromRGB(255, 255, 255)
    title.Font = Enum.Font.Code
    title.TextScaled = true
    title.Parent = frame
end

local list = frame:FindFirstChildOfClass("UIListLayout") or Instance.new("UIListLayout")
list.Padding = UDim.new(0, 3)
list.FillDirection = Enum.FillDirection.Vertical
list.Parent = frame

local function getOrCreateLabel(name)
    local label = frame:FindFirstChild(name)
    if not label then
        label = Instance.new("TextLabel")
        label.Name = name
        label.Size = UDim2.new(1, -10, 0, 25)
        label.BackgroundTransparency = 0.3
        label.Font = Enum.Font.Code
        label.TextScaled = true
        label.TextColor3 = Color3.fromRGB(255, 255, 255)
        label.TextXAlignment = Enum.TextXAlignment.Left
        label.Parent = frame
    end
    return label
end

local function setLabel(label, text, color)
    label.Text = text
    label.BackgroundColor3 = color
end

-- ‚öôÔ∏è t·∫£i v√† th·ª±c thi script
local function fetchAndRun(info)
    local ok, code = pcall(function()
        return game:HttpGet(info.url)
    end)
    if not ok or not code then return nil, "Fetch error" end
    local func, err = loadstring(code)
    if not func then return nil, "Compile error: " .. tostring(err) end
    local success, execErr = pcall(func)
    if not success then return nil, "Runtime error: " .. tostring(execErr) end
    return code, "Loaded successfully"
end

-- üöÄ Ch·∫°y l·∫ßn ƒë·∫ßu
local lastCodes = {}
for _, s in ipairs(scripts) do
    local label = getOrCreateLabel(s.name)
    local code, msg = fetchAndRun(s)
    lastCodes[s.name] = code
    if msg == "Loaded successfully" then
        setLabel(label, "‚úÖ " .. s.name .. " loaded (" .. os.date("%H:%M:%S") .. ")", Color3.fromRGB(40, 120, 40))
    else
        setLabel(label, "‚ùå " .. s.name .. " = " .. msg, Color3.fromRGB(120, 40, 40))
    end
end

-- üîÅ Theo d√µi thay ƒë·ªïi
task.spawn(function()
    while task.wait(reloadDelay) do
        for _, s in ipairs(scripts) do
            local ok, newCode = pcall(function()
                return game:HttpGet(s.url)
            end)
            if ok and newCode and newCode ~= lastCodes[s.name] then
                lastCodes[s.name] = newCode
                local label = getOrCreateLabel(s.name)
                setLabel(label, "üü° Updating " .. s.name .. " (" .. os.date("%H:%M:%S") .. ")", Color3.fromRGB(100, 100, 40))
                local code, msg = fetchAndRun(s)
                if msg == "Loaded successfully" then
                    setLabel(label, "‚úÖ " .. s.name .. " reloaded (" .. os.date("%H:%M:%S") .. ")", Color3.fromRGB(40, 120, 40))
                else
                    setLabel(label, "‚ùå " .. s.name .. " = " .. msg, Color3.fromRGB(120, 40, 40))
                end

                -- ‚ö° N·∫øu l√† Event.lua -> random delay + load Event-hop
                if s.name == "Event.lua" then
                    local delayTime = math.random(minHopDelay, maxHopDelay)
                    setLabel(label, "‚è≥ Event-hop in " .. math.floor(delayTime / 60) .. "m", Color3.fromRGB(80, 80, 20))

                    task.delay(delayTime, function()
                        local okHop, errHop = pcall(function()
                            loadstring(game:HttpGet("https://raw.githubusercontent.com/dracular111/01/main/Event-hop"))()
                        end)
                        if okHop then
                            setLabel(label, "‚úÖ Event-hop executed (" .. os.date("%H:%M:%S") .. ")", Color3.fromRGB(40, 120, 40))
                        else
                            setLabel(label, "‚ùå Event-hop failed, retrying...", Color3.fromRGB(120, 40, 40))
                            -- retry cho ƒë·∫øn khi th√†nh c√¥ng
                            task.spawn(function()
                                local success = false
                                repeat
                                    task.wait(30)
                                    success = pcall(function()
                                        loadstring(game:HttpGet("https://raw.githubusercontent.com/dracular111/01/main/Event-hop"))()
                                    end)
                                until success
                                setLabel(label, "‚úÖ Event-hop retry success", Color3.fromRGB(40, 120, 40))
                            end)
                        end
                    end)
                end
            end
        end
    end
end)
