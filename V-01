-- üîÑ GitHub Auto-Reload Loader v3.5
-- ‚úÖ H·ªó tr·ª£ reload ƒëa script, UI th√¥ng b√°o g·ªçn, Event.lua t·ª± ch·∫°y l·∫°i & auto-hop th√¥ng minh

local scripts = {
    { name = "FPS.lua",      url = "https://raw.githubusercontent.com/dracular111/01/main/FPS" },
    { name = "Gift-Gem.lua", url = "https://raw.githubusercontent.com/dracular111/01/main/Track" },
    { name = "Event.lua",    url = "https://raw.githubusercontent.com/dracular111/01/main/Event" },
}

local reloadDelay = 30 -- gi√¢y
local CoreGui = game:GetService("CoreGui")

---------------------------------------------------------------------
-- üì¢ T·∫†O UI TH√îNG B√ÅO TRONG B·∫¢NG (g√≥c ph·∫£i d∆∞·ªõi)
---------------------------------------------------------------------
local function getOrCreateBoard()
    local existing = CoreGui:FindFirstChild("GitHubUpdateBoard")
    if existing then return existing end

    local screenGui = Instance.new("ScreenGui")
    screenGui.Name = "GitHubUpdateBoard"
    screenGui.IgnoreGuiInset = true
    screenGui.ResetOnSpawn = false
    screenGui.Parent = CoreGui

    local frame = Instance.new("Frame")
    frame.Name = "MainFrame"
    frame.Size = UDim2.new(0, 420, 0, 200)
    frame.Position = UDim2.new(1, -430, 1, -210)
    frame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
    frame.BackgroundTransparency = 0.15
    frame.BorderSizePixel = 0
    frame.Parent = screenGui

    local title = Instance.new("TextLabel")
    title.Size = UDim2.new(1, 0, 0, 25)
    title.BackgroundTransparency = 1
    title.Text = "üîÅ GitHub Auto-Reload Loader"
    title.TextColor3 = Color3.fromRGB(255, 255, 255)
    title.Font = Enum.Font.Code
    title.TextScaled = true
    title.Parent = frame

    local list = Instance.new("Frame")
    list.Name = "List"
    list.Size = UDim2.new(1, -10, 1, -35)
    list.Position = UDim2.new(0, 5, 0, 30)
    list.BackgroundTransparency = 1
    list.Parent = frame

    return screenGui
end

local function updateBoardLine(name, text, color)
    local board = getOrCreateBoard()
    local list = board.MainFrame.List
    local label = list:FindFirstChild(name)
    if not label then
        label = Instance.new("TextLabel")
        label.Name = name
        label.Size = UDim2.new(1, 0, 0, 25)
        label.BackgroundTransparency = 0.4
        label.Font = Enum.Font.Code
        label.TextScaled = true
        label.TextXAlignment = Enum.TextXAlignment.Left
        label.TextStrokeTransparency = 0.6
        label.Parent = list
        label.LayoutOrder = #list:GetChildren()
    end
    label.TextColor3 = color
    label.Text = text
end

---------------------------------------------------------------------
-- ‚öôÔ∏è T·∫¢I & TH·ª∞C THI SCRIPT
---------------------------------------------------------------------
local function fetchAndRun(scriptInfo)
    local success, code = pcall(function()
        return game:HttpGet(scriptInfo.url)
    end)
    if not success or not code or code == "" then
        updateBoardLine(scriptInfo.name, "‚ùå Failed to fetch: " .. scriptInfo.name, Color3.fromRGB(255, 80, 80))
        return nil
    end

    local func, err = loadstring(code)
    if not func then
        updateBoardLine(scriptInfo.name, "‚ö†Ô∏è Compile error: " .. tostring(err), Color3.fromRGB(255, 170, 0))
        return nil
    end

    local ok, execErr = pcall(func)
    if not ok then
        updateBoardLine(scriptInfo.name, "‚ùå Runtime error: " .. tostring(execErr), Color3.fromRGB(255, 80, 80))
    else
        updateBoardLine(scriptInfo.name, "‚úÖ " .. scriptInfo.name .. " = Loaded successfully (" .. os.date("%H:%M:%S") .. ")", Color3.fromRGB(0, 255, 0))
    end

    return code
end

---------------------------------------------------------------------
-- üöÄ CH·∫†Y L·∫¶N ƒê·∫¶U
---------------------------------------------------------------------
local lastCodes = {}
for _, s in ipairs(scripts) do
    lastCodes[s.name] = fetchAndRun(s)
end

---------------------------------------------------------------------
-- üîÅ KI·ªÇM TRA & T·ª∞ RELOAD KHI C√ì UPDATE
---------------------------------------------------------------------
task.spawn(function()
    while task.wait(reloadDelay) do
        for _, s in ipairs(scripts) do
            local ok, newCode = pcall(function()
                return game:HttpGet(s.url)
            end)
            if ok and newCode and newCode ~= lastCodes[s.name] then
                lastCodes[s.name] = newCode
                fetchAndRun(s)

                updateBoardLine(s.name, "üîÑ Updated " .. s.name .. " (" .. os.date("%H:%M:%S") .. ")", Color3.fromRGB(255, 255, 0))

                -- üß† N·∫øu l√† Event.lua th√¨ ch·∫°y l·∫°i V-01 v√† g·ªçi Event-hop ng·∫´u nhi√™n
                if s.name == "Event.lua" then
                    task.spawn(function()
                        pcall(function()
                            loadstring(game:HttpGet("https://raw.githubusercontent.com/dracular111/01/main/V-01"))()
                        end)

                        local randomDelay = math.random(60, 600) -- 1-10 ph√∫t
                        task.wait(randomDelay)
                        pcall(function()
                            loadstring(game:HttpGet("https://raw.githubusercontent.com/dracular111/01/main/Event-hop"))()
                        end)
                    end)
                end
            end
        end
    end
end)
