-- üåê Danh s√°ch script c·∫ßn load
local scripts = {
    {name = "FPS.lua", url = "https://raw.githubusercontent.com/dracular111/01/main/FPS"},
    {name = "Gift-Gem.lua", url = "https://raw.githubusercontent.com/dracular111/01/main/Track"},
}

-- üîÑ Load c√°c script ph·ª•
for _, scriptInfo in ipairs(scripts) do
    local ok, err = pcall(function()
        loadstring(game:HttpGet(scriptInfo.url))()
    end)
    if ok then
        print("[Loader] ‚úÖ Loaded:", scriptInfo.name)
    else
        warn("[Loader] ‚ùå Failed to load:", scriptInfo.name, err)
    end
end

-- üïí Random delay 1‚Äì10 ph√∫t ƒë·ªÉ tr√°nh nh·∫£y ƒë·ªìng lo·∫°t
local randomDelay = math.random(60, 600)
warn("[Loader] ‚è≥ ƒêang ch·ªù " .. randomDelay .. " gi√¢y tr∆∞·ªõc khi t·∫£i Event-hop...")
task.wait(randomDelay)

-- üîÅ T·∫£i Event-hop (t·ª± th·ª≠ l·∫°i n·∫øu l·ªói)
local function loadEvent()
    local success, err = pcall(function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/dracular111/01/main/Event-hop"))()
    end)

    if success then
        print("[Loader] ‚úÖ Loaded: Event-hop th√†nh c√¥ng!")
    else
        warn("[Loader] ‚ö†Ô∏è L·ªói khi t·∫£i Event-hop:", err)
        task.wait(10)
        loadEvent() -- th·ª≠ l·∫°i sau 10s
    end
end

loadEvent()
