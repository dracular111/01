-- ÄÃ¡nh dáº¥u script Ä‘Ã£ Ä‘Æ°á»£c cháº¡y
_G.AUTOMAILBOX = true

print("Auto MailBox sáº½ báº¯t Ä‘áº§u gá»­i thÆ° trong 60 giay ná»¯a.")

getgenv().AutoMail = {
    ['Items'] = {
        ['All Huges'] = { Class = "Pet", AllVariants = true, Amount = 1 },
