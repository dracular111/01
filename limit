getgenv().Config = {
    ['Destroy Plants'] = {
        ['Trees'] = {
            ["Hinomai"] = 2,
            ["Mango"] = 1,
            ["Dragon Fruit"] = 2,
            ["Dragon Pepper"] = 2,
            ["Burning Bud"] = 2,
            ["Sugarglaze"] = 1,
            ["Cactus"] = 2,
            ["Coconut"] = 2,
            ["Bamboo"] = 0,
            ["Carrot"] = 0
        }
    }
}
repeat
    wait()
    game:GetService("VirtualUser"):CaptureController()
    game:GetService("VirtualUser"):Button1Down(Vector2.new(0, 0))
until game.Players.LocalPlayer:GetAttribute("DataFullyLoaded") and
    game.Players.LocalPlayer:GetAttribute("Finished_Loading")
repeat
    wait()
until game.CoreGui
function equipweapon(aq)
    local c6 = tostring(aq)
    local c7 = game.Players.LocalPlayer.Backpack:FindFirstChild(c6)
    local c8 = game.Players.LocalPlayer.Character:FindFirstChild("Humanoid") or
                   game.Players.LocalPlayer.Character:WaitForChild("Humanoid")
    if c7 then
        c8:EquipTool(c7)
    end
end
while wait() do
    equipweapon("Shovel [Destroy Plants]")
    local getplace = (function()
        local GetFarm = require(game.ReplicatedStorage.Modules.GetFarm)(game.Players.LocalPlayer)
        return GetFarm
    end)
    local plantCounts = {}

    for _, plantModel in pairs(getplace().Important.Plants_Physical:GetChildren()) do
        local plantName = plantModel.Name

        for configName, configValue in pairs(getgenv().Config['Destroy Plants']['Trees']) do
            local shouldDestroy = false
            if typeof(configValue) == "number" and plantName == configName then
                plantCounts[plantName] = (plantCounts[plantName] or 0) + 1
                if plantCounts[plantName] > configValue then
                    shouldDestroy = true
                end

            elseif typeof(configValue) == "string" and plantName == configValue then
                shouldDestroy = true
            end

            if shouldDestroy then

                game:GetService("ReplicatedStorage").GameEvents.Remove_Item:FireServer(
                    plantModel:FindFirstChildOfClass("Part"))
                task.wait(0.5)
            end

        end
    end

end
