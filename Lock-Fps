-- ğŸ”„ Script loader tá»± Ä‘á»™ng láº¥y code tá»« GitHub vÃ  reload khi cÃ³ thay Ä‘á»•i
local rawURL = "https://raw.githubusercontent.com/dracular111/01/main/FPS"
-- â†‘ ÄÃ¢y chá»‰ cáº§n lÃ  URL raw script (khÃ´ng bao gá»“m loadstring)

local http = game:GetService("HttpService")

local function fetchCode()
    local success, result = pcall(function()
        return game:HttpGet(rawURL)
    end)
    if success then
        return result
    else
        warn("[Loader] KhÃ´ng táº£i Ä‘Æ°á»£c code tá»« GitHub:", result)
        return nil
    end
end

local lastCode = fetchCode()
if not lastCode then
    warn("[Loader] KhÃ´ng thá»ƒ khá»Ÿi Ä‘á»™ng â€” kiá»ƒm tra URL!")
    return
end

local function safeRun(code)
    local f, err = loadstring(code)
    if not f then
        warn("[Loader] Lá»—i biÃªn dá»‹ch:", err)
        return
    end
    local success, execErr = pcall(f)
    if not success then
        warn("[Loader] Lá»—i khi cháº¡y script:", execErr)
    else
        print("[Loader] Script Ä‘Ã£ cháº¡y thÃ nh cÃ´ng.")
    end
end

-- ğŸ”¥ Cháº¡y láº§n Ä‘áº§u
safeRun(lastCode)

-- ğŸ” Tá»± kiá»ƒm tra má»—i 30 giÃ¢y xem file GitHub cÃ³ thay Ä‘á»•i khÃ´ng
task.spawn(function()
    while task.wait(30) do
        local newCode = fetchCode()
        if newCode and newCode ~= lastCode then
            print("[Loader] PhÃ¡t hiá»‡n thay Ä‘á»•i trÃªn GitHub! Äang reload...")
            lastCode = newCode
            safeRun(newCode)
        end
    end
end)
